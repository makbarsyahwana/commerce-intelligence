generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                String          @id @default(cuid())
  providerProductId Int
  name              String
  description       String?
  image             String?
  price             Decimal
  discount          Int?
  availability      Boolean?
  brand             String?
  category          String
  rating            Decimal?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  syncedAt          DateTime        @default(now())
  provider          String          @default("fake-store")
  orderItems        OrderItem[]
  reviews           ProductReview[]

  @@unique([provider, providerProductId])
  @@index([category])
  @@index([price(sort: Desc)])
  @@index([provider])
}

model Order {
  id              String      @id @default(cuid())
  providerOrderId Int
  providerUserId  Int
  status          String
  totalPrice      Decimal
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  syncedAt        DateTime    @default(now())
  provider        String      @default("fake-store")
  orderItems      OrderItem[]

  @@unique([provider, providerOrderId])
  @@index([providerOrderId(sort: Desc)])
  @@index([status])
  @@index([provider])
  @@index([provider, providerOrderId(sort: Desc)])
  @@index([createdAt(sort: Desc)])  // Added for recent orders query
}

model OrderItem {
  id                String   @id @default(cuid())
  orderId           String
  productId         String
  quantity          Int
  unitPriceSnapshot Decimal
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  syncedAt          DateTime @default(now())
  order             Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product           Product  @relation(fields: [productId], references: [id])

  @@unique([orderId, productId])
  @@index([productId])
}

model ProductReview {
  id             String   @id @default(cuid())
  productId      String
  providerUserId Int
  rating         Int
  comment        String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  syncedAt       DateTime @default(now())
  product        Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model SyncRun {
  id              String     @id @default(cuid())
  startedAt       DateTime   @default(now())
  finishedAt      DateTime?
  status          SyncStatus @default(RUNNING)
  errorMessage    String?
  productsFetched Int?
  ordersFetched   Int?
  syncedAt        DateTime   @default(now())
  provider        String?

  @@index([startedAt(sort: Desc)])  // Added for latest sync run query
}

enum SyncStatus {
  RUNNING
  SUCCESS
  FAILED
}
